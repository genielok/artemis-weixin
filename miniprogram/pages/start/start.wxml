<!--start.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/start/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="/images/start/title8.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="/images/start/logo.png"></image>
      </view>
      <view class="bd">
        <view class="smalltitle">森之灵的守护者</view>
      <!-- <image class="smalltitle" src="/images/start/confirm-word1.png"></image> -->
        <view class="confirm-btn" bindtap='goToIndex'>
         
          <text >欢迎使用</text>
        </view>
        <text class="copyright"></text>
      </view>
    </view>
  </block>
</view>